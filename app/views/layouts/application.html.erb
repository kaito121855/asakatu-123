<!DOCTYPE html>
<html>
  <head>
    <title>Asakatu123</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <a class="grid-6" href="/">Asakatu</a>
      <div class="user_nav">
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
            <span><%= current_user.nickname %>
              <%= link_to "マイページ", "/users/#{current_user.id}" %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </span>
            <%= link_to "投稿する", new_tweet_path, class: "post" %>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
    </header>

    <div class="main"><%= yield %></div>
    
    <footer>
      <a class="footer_nav" href="/">ホーム</a>
      <a class="footer_nav" href="#">タスク</a>
      <a class="footer_nav" href="#">レポート</a>
    </footer>
  </body>
</html>
