<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>新規登録</h1>
  </div>

  <%= render "devise/shared/error_messages", model: f.object %>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">ニックネーム</label>
    </div>
    <%= f.email_field :nickname, autofocus: true, autocomplete: "例）asakatu太郎", autofocus: true %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "PC・携帯どちらでも可" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, autocomplete: "6文字以上の半角英字または半角数字" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード（確認）</label>
    </div>
    <%= f.password_field :password_confirmation, autocomplete: "同じパスワードを入力して下さい" %>
  </div>

  <div class="register-btn">
    <%= f.submit "新規登録", class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
